---
import Layout from 'src/layouts/Layout.astro';
import Formcontacto from 'src/sections/Formcontacto.astro';
import Heroabout from 'src/sections/Heroabout.astro';
import Kpis from 'src/sections/Kpis.astro';
import Aboutme from 'src/sections/Aboutme.astro';
import Funfacts from 'src/sections/Funfacts.astro';
import CTA2 from 'src/sections/CTA2.astro';
import Timeline from 'src/sections/Timeline.astro';
import { getLangFromUrl, useTranslations } from "src/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---
<Layout title={t('layout.about.title')} 
description={t('layout.about.description')} 
keywords={t('layout.about.keywords')}
>
    <Heroabout />
    <Kpis />
    <Aboutme /> 
    <Funfacts />
    <CTA2  
  backgroundImage="/img/17.webp" 
  title={t('cta2.title')} 
  paragraph={t('cta2.paragraph')} 
  buttonText={t('cta2.buttonText')} 
/>
    <Timeline />    
    <Formcontacto />
</Layout>

