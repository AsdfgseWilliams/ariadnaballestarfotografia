<section class="flex justify-center items-center space-x-6 px-8 py-20">
  <!-- Retratos -->
  <div class="flex flex-col items-center w-1/3">
    <div class="relative w-full max-w-[400px] h-[500px] overflow-hidden">
      <img id="retrato-img" src="ariadnaballestarfotografia/img/8.webp" alt="Retrato" class="absolute inset-0 w-full h-full object-cover">
    </div>
    <h3 class=" text-center mt-12 text-3xl font-light tracking-wide">RETRATOS</h3>
  </div>

  <!-- Bodas -->
  <div class="flex flex-col items-center w-1/3">
    <div class="relative w-full max-w-[500px] h-[700px] overflow-hidden">
      <img id="bodas-img" src="ariadnaballestarfotografia/img/4.webp" alt="Bodas" class="absolute inset-0 w-full h-full object-cover">
    </div>
    <h3 class="text-center mt-12 text-3xl font-light tracking-wide">BODAS</h3>
  </div>

  <!-- Parejas -->
  <div class="flex flex-col items-center w-1/3">
    <div class="relative w-full max-w-[280px] h-[390px] mr-80 mt-10" style=" background-image: url('ariadnaballestarfotografia/img/5.webp'); background-size: cover;">
    </div>
    <div class="h-[390px] w-[280px] flex items-center justify-center overflow-hidden relative -mt-52 -mr-20">
      <img id="parejas-img" 
           alt="Parejas" 
           class="object-cover w-full h-full" 
           src="ariadnaballestarfotografia/img/6.webp">
  </div>
    <h3 class="text-center mt-12 text-3xl font-light tracking-wide">PAREJAS</h3>
  </div>
</section>

  


<script>
const retratoImages = ["/img/8.webp", "/img/9.webp"];
const parejasImages = ["/img/6.webp", "/img/7.webp"];

let retratoIndex = 0;
let parejasIndex = 0;

function changeImage() {
    // Cambiar imagen de Retratos
    const retratoImgElement = document.getElementById("retrato-img") as HTMLImageElement;
    retratoIndex = (retratoIndex + 1) % retratoImages.length;
    retratoImgElement.src = retratoImages[retratoIndex];


    // Cambiar imagen de Parejas
    const parejasImgElement = document.getElementById("parejas-img") as HTMLImageElement;
    parejasIndex = (parejasIndex + 1) % parejasImages.length;
    parejasImgElement.src = parejasImages[parejasIndex];
}

setInterval(changeImage, 2000); // Cambiar cada 2 segundos


</script>