---
import { getLangFromUrl, useTranslations } from "src/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="text-center bg-cover bg-center bg-no-repeat min-h-36 py-[6vw]" style="background-image: url('/img/24.webp'), linear-gradient(to bottom, rgba(255, 255, 255, 0.067), rgba(255, 255, 255, 0.084), white); background-blend-mode: overlay;">

    <h1 class="text-4xl">{t('photoshoots.hero.h1')}</h1>
    <h2 class="uppercase" set:html={t('photoshoots.hero.h2')}></h2>
    <a href="#contactForm" class="link-button mt-8">
        {t('photoshoots.hero.button')}
    </a>
</section>