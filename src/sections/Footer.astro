---
import { getLangFromUrl, useTranslations } from "src/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer id="footer" class="bg-[#313b41] text-white py-8 px-16">
    <div class="w-[1240px] py-8 container mx-auto grid grid-cols-9 gap-8 text-center md:text-left">
  
        <!-- Contact Section -->
        <div class="col-span-2 text-left">
          <h3 class="text-3xl mb-2 text-gray-100">{t('footer.h3')}</h3>
          <a href="mailto:info@ariadnaballestar.com" class="font-eb italic text-base font-medium">info@ariadnaballestar.com</a>
        </div>
        
        <!-- Central Text Section -->
        <div class="col-span-5 md:border-l md:border-r md:border-white px-4">
          <p class="font-eb text-base italic text-center font-medium mx-8">
            {t('footer.quote')}
          </p>
        </div>
        
        <!-- Follow Me Section -->
        <div class="col-span-2 text-right">
          <h3 class="text-3xl mb-2 text-gray-100">FOLLOW ME</h3>
          <div class="flex justify-center md:justify-end space-x-4">
            <a href="#" class="hover:text-white transition-colors"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="hover:text-white transition-colors"><i class="fab fa-pinterest"></i></a>
            <a href="#" class="hover:text-white transition-colors"><i class="fab fa-instagram"></i></a>
          </div>
        </div>
      
      </div>
      
  <div class="flex mt-6 justify-center space-x-6 text-xs font-semibold tracking-wider uppercase">
        <a href="#" class="hover:text-white transition-colors">POLÍTICA DE PRIVACIDAD</a>
        <span>|</span>
        <a href="#" class="hover:text-white transition-colors">AVISO LEGAL</a>
        <span>|</span>
        <a href="#" class="hover:text-white transition-colors">POLÍTICA DE COOKIES</a>
      </div>
    <div class="container mx-auto mt-8 border-t border-white pt-4 text-center text-[8px] font-extrabold uppercase tracking-wider">
      
      <p class="mt-4">Copyright &copy; <span id="year"></span> {t('footer.copyright')}</p>
    </div>
  </footer>
  <script>
    // Obtiene el año actual
    const year = new Date().getFullYear();
    // Inserta el año en el elemento con id 'year'
    document.getElementById('year')!.textContent = year.toString();
  </script>