---
import { getLangFromUrl, useTranslations } from "src/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="text-center hidden md:block">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-0">
        <div class="bg-cover bg-center bg-no-repeat h-[80svh]" style="background-image: url('/img/1.webp')">
            
        </div>
        <div class="bg-cover bg-center bg-no-repeat h-[80svh]" style="background-blend-mode: overlay; background-image: url('/img/2.webp'),  linear-gradient(180deg, rgba(43, 135, 218, 0) 62%, rgba(255, 255, 255, 0.19) 100%);">
            
        </div>
        <div class="bg-cover bg-center bg-no-repeat h-[80svh]" style="background-image: url('/img/3.webp')">
            
        </div>

    </div>
</section>
    <section class="justify-center items-center text-center mb-40 md:-mt-20 mx-auto max-w-7xl w-[80%]">
        <h1 class="font-medium">
            {t('home.hero.h1')}
        </h1>

        <div class="mt-12 text-xl font-eb italic font-medium">
        <p>
            {t('home.hero.p1')}
        </p>
        <br>
        <p>
            {t('home.hero.p2')}
        </p>
        <p>
            {t('home.hero.p3')}
        </p>
    </div>
    <a href="/contacto" class="link-button mt-8">
        {t('button.1')}
    </a>
    </section>