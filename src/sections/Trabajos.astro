---
import { getLangFromUrl, useTranslations, useTranslatedPath } from "src/i18n/utils";
const lang = getLangFromUrl(Astro.url) as 'es' | 'en';
const translatePath = useTranslatedPath(lang);
const t = useTranslations(lang);
---
<section class="py-16 md:py-32 mx-auto justify-center text-center" style="
    background-image: url('/img/12.webp'), linear-gradient(90deg, #ffffff 59%, rgba(255, 255, 255, 0.7) 67%);
    background-blend-mode: overlay; background-size: cover;
">
    <h2>{t('home.trabajos.h2')}</h2>
    
    <div class="py-12 md:py-24 max-w-[90%] md:max-w-[1024px] mx-auto justify-center">  
        
        <!-- Versión móvil: columna única -->
        <div class="block md:hidden space-y-16">
            <!-- Imagen 1 -->
            <div class="text-center">
                <p class="text-lg pb-2">01</p>
                <img src="/img/11.webp" alt="Imagen 1" class="w-full max-w-[350px] mx-auto">
            </div>
            
            <!-- Imagen 2 -->
            <div class="text-center">
                <p class="text-lg pb-2">02</p>
                <img src="/img/10.webp" alt="Imagen 2" class="w-full max-w-[350px] mx-auto">
            </div>
            
            <!-- Imagen 3 -->
            <div class="text-center">
                <p class="text-lg pb-2">03</p>
                <img src="/img/22.webp" alt="Imagen 3" class="w-full max-w-[350px] mx-auto">
            </div>
            
            <!-- Imagen 4 -->
            <div class="text-center">
                <p class="text-lg pb-2">04</p>
                <img src="/img/23.webp" alt="Imagen 4" class="w-full max-w-[350px] mx-auto">
            </div>
        </div>
        
        <!-- Versión desktop: layout original -->
        <div class="hidden md:block">
            <div class="grid grid-cols-3 gap-4 pt-2">
                <!-- Columna izquierda (más grande) -->
                <div class="col-span-2 py-28">
                    <!-- Contenido de la columna izquierda -->
                    <hr class="pb-10 -mr-20 -ml-28 border-gray-800">
                    <p class="text-end pb-2 mr-12">01</p>
                    <img src="/img/11.webp" alt="Imagen 1" class="h-auto max-w-[450px] ml-auto mr-12">
                </div>
                <!-- Columna derecha (36.7% del contenedor) -->
                <div class="col-span-1">
                    <!-- Contenido de la columna derecha -->
                    <p class="text-end pb-6 -mr-28">02</p>
                    <img src="/img/10.webp" alt="Imagen 2" class="w-auto max-h-[500px]">
                </div>
            </div>
            <div class="grid grid-cols-3 gap-4 pt-20">
               <!-- Columna izquierda (36.7% del contenedor) -->
                <div class="col-span-1 -ml-28">
                    <!-- Contenido de la columna derecha -->
                    <p class="text-start pb-2">03</p>
                    <img src="/img/22.webp" alt="Imagen 3" class="w-auto max-h-[500px] z-20">
                </div>
               
                <!-- Columna derecha (más grande) -->
                <div class="col-span-2 py-28">
                    <!-- Contenido de la columna izquierda -->
                    <hr class="pb-5 -ml-20 -mr-28 border-gray-800 z-10">
                    <p class="text-start pb-2 mr-12">04</p>
                    <img src="/img/23.webp" alt="Imagen 4" class=" h-auto max-w-[450px] mr-12">
                </div>
               
            </div>
        </div>
       
    </div>
</section>